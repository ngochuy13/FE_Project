mixin tooltip(target, dx, dy)
  .tooltip(data-target='#{target}', data-x='#{dx}', data-y='#{dy}', data-dx='0', data-dy='0', data-dir='top')
    img(src='images/Cars/Ractis/icon-tooltip-new.png', alt='tooltip-icon')
    .icon-tooltip &nbsp;
    
