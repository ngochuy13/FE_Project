mixin car-carousel-gallery(imgArr)
  .carousel-with-thumbnail
    .main-image
      .main-image-wrapper
        img#main-image(src='#{imgArr[0].mainImg}', alt='', title='')
        span.remask Overseas only 
    .car-gallery-carousel-wrapper
      #car-gallery-carousel.car-gallery-carousel
        for val, index in imgArr
          if index == 0
            .car-gallery-carousel__item.car-gallery-carousel__item--active(data-src='#{val.mainImg}', data-download='#{val.mainImg}', data-remask='0')
              img(src='#{val.thumb}', alt='', title='')
          else
            .car-gallery-carousel__item(data-src='#{val.mainImg}', data-download='#{val.mainImg}', data-remask='1')
              img(src='#{val.thumb}', alt='', title='')
      .car-gallery-paging
        p
          strong GALLERY
        p.car-gallery-sum
          span#car-gallery-current  
          | /
          span#car-gallery-sum  
      .download-wrapper
        a#car-gallery-download-btn.car-gallery-download-btn(href='#{imgArr[0].mainImg}', title='') Download