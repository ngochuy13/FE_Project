//- case study article mixin
mixin case-study(src, title)
	.case-study-item&attributes(attributes)
		a(href="insightsArticle" , title="#{title}")
			.block-img
				+img(title , src)
			.title= title
		if block
			block

//- Product detail section mixin for product detail page
mixin product-detail(src, title)
	.section.section-product-detail-item&attributes(attributes)
		.container
			.media
				+img(title , src)
			.content
				h4.title= title
				.block-description
					if block
						block

//- Facaulty member mixin for Faculty page
mixin facaulty-member(src, title_1, title_2, title_3, title_4)
	.facaulty-member-item&attributes(attributes)
		.block-img
			+img(title , src)
		.block-content
			p= title_1
			p= title_2
			p -----
			p= title_3
			p= title_4

