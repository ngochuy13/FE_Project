//- Insight article mixin for insights page
mixin insight-article-item(src, type, typeicon, title , link)
	.insight-article-item&attributes(attributes)
		.block-img
			a(href='#{link}' , title='#{title}')
				+img(title , src)
		.block-info
			.block-type
				i(class=' fa fa-#{typeicon}')
				span= type
			.block-save-article
				a(href="#" , title="Save this Article")
					i(class='fa fa-star-o')
					span Save this Article
			.clearfix
			.block-title
				+link(title , link)
			.block-description
				if block
					block
				
//- Office location mixin for contact page
mixin office-location-item(src, title , link)
	.office-location-item&attributes(attributes)
		a(title='#{title}' , href='#{link}')
			.block-img
				+img(title , src)
				.overplay-hover
				.title= title
		.block-description
			if block
				block
