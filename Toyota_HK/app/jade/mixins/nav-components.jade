mixin navigation-car-item(url, title, img, price)
  - if(typeof url === 'undefined') url = 'car-detail.html'
  - if(typeof img === 'undefined') img = 'images/menu/car-1.png'
  .cars-list__item.col-xs-12.col-sm-12.col-md-2.col-lg-2&attributes(attributes)
    a(href="#{url}" , title="#{title}").car-info
      +img(title, img)
      span.car-name= title
      span.car-short-desc= price