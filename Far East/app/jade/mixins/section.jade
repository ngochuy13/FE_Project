mixin sectionResidental(title , img_1, img_2, img_3, img_4, description_short , link)  
  section.residental-property-section&attributes(attributes)
    .container
      .row
        .col-md-12
          .title= title
          .residental-property-block.hidden-sm.hidden-xs
            .main-img-strip
              img(src="#{img_1}", alt="main residental img")
            .information-strip
              .icon-banner-div
                a(href="#")
                  img(src="#{img_2}", alt="Greenwood mews icon")
              .link-img-div
                a(href="#")
                  img(src="#{img_3}", alt="link1")
              .link-img-div
                a(href="#")
                  img(src="#{img_4}", alt="link2")
              .view-all-div
                .words-div
                  a(href="#{link}")
                    h3 VIEW ALL
                      span.fa.fa-angle-right
                    p!= description_short
          .visible-sm.visible-xs
            .mobile-slide
              .slide-wrap.owl-carousel(data-nav='true')
                .slide-item
                  img(src="images/residential/greenwood_mews_mobile_1.jpg", alt="")
                .slide-item
                  img(src="images/residential/greenwood_mews_mobile_1.jpg", alt="")
                .slide-item
                  img(src="images/residential/greenwood_mews_mobile_1.jpg", alt="")

mixin sectionSlider(img)
  #main-slide-section&attributes(attributes)
    .slide-wrap.owl-carousel
      .slide-item
        a(href="#", title="GREENWOOD NEWS")
          img(src="#{img}", alt="Slide 1")
            
mixin sectionSliderVideo(src, img)
  #main-slide-section&attributes(attributes)
    .hidden-sm.hidden-xs
      .video-wrap(video-src="#{src}")
      video#really-cool-video.video-js.vjs-default-skin(controls='false', muted="", loop="true", preload='auto', width='100%', height='670', poster='#{img}', data-setup='{ "controls": false, "autoplay": true, "preload": "auto", "loop": "true" }')
        source(src='#{src}', type='video/mp4')
    .visible-sm.visible-xs
      .video-img-mobile
        img(src="#{img}", alt="")

