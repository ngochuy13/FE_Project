extends layouts/book-template

block vars
  -title = 'Booking Step'
  -bodyClass = 'booking-step'
  -bannerIMG = ''
  -page = 'booking-step-1'
block container  
  .inner
    main#main(style="min-height: 800px;")
      .section-tab
        +filter-select([
          {
            "text": "YOU BOOKING"
          },
          {
            "text": "GUEST DETAILS"
          },
          {
            "text": "CONFIRAMATION"
          }
        ])

      .section-booking-widget
        .booking-date-range-picker-container
        .container.text-center
          .row.form-inline(style="position: relative;")
            .form-group
              .row
                label.control-label(for="from") FROM:
                +fake-datepicker("Check-in", "CheckIn", "", "checkin-date" , "readonly")
            .form-group
              .row
                label.control-label(for="to") TO:
                +fake-datepicker("Check-out", "CheckOut", "", "checkout-date" , "readonly")
            .form-group.num-room-select
              .row
                label.control-label(for="room") N&deg; ROOMS:
                .select-wrap
                  select.select-style-2.bootstrap-select
                    option(value='1', tabindex='-1') 01
                    option(value='2', tabindex='-1') 02
                    option(value='3', tabindex='-1') 03
                    option(value='4', tabindex='-1') 04
                    option(value='5', tabindex='-1') 05
            .form-group.rates-select
              .row
                label.control-label(for="room") 
                .select-wrap
                  select.select-style-2.bootstrap-select
                    option(value='', tabindex='-1') RATES IN AED
                    option(value='1', tabindex='-1') 1 rates
                    option(value='2', tabindex='-1') 2 rates
                    option(value='3', tabindex='-1') 3 rates
                    option(value='4', tabindex='-1') 4 rates
                    option(value='5', tabindex='-1') 5 rates
            

      .section-special-offers.section-block
        .page-title.section-title.text-center
          .container
            h1.block-title.wow.fadeInUp(data-wow-duration="1s") MY RESERVATION
            .sub-title.style-2.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.05s")
              span
                span.line-before
                span.text Choose your room
                span.line-after

      .section-booking-content
        .container
          .row
            .col-xs-12.col-sm-12.col-md-9.booking-results
              .content-step-2
                .package-selection-wrapper
                  .row
                    .col-xs-12
                      .booking-result-item-group.type-2
                        .row    
                          .col-xs-12.col-sm-12.title Package selection
                          .col-xs-12.col-sm-4
                            .cover
                              +img('Package Selection','choose-room/room-1.jpg')
                          .col-xs-12.col-sm-8
                            .row.selected-item-detail
                              .col-xs-6
                                .main-information
                                  .room
                                    h4.field-title.room-title Room 1
                                    .reservation-info
                                      p 2 Adaults - 6 Days (5 Nights)
                                      p Thurs, 10 Dec 2015
                                      p Tues, 15 Dec 2015
                                  .sub-total
                                    span.field-title SUBTOTAL: 
                                    span AED 12,500
                              .col-xs-6
                                .extra-information
                                  .info-piece
                                    .field-title Best flexible rate
                                    p This rate is excluding breakfast
                                    a(href="#") Read more
                                  .info-piece
                                    a.field-title(href="#") Cancelation policy
                                  .info-piece
                                    a.field-title(href="#") Average rate per night: AED 1,240
                                    a.field-title(href="#") Daily rate
                form.row.guest-info.form-horizontal.form-horizontal-style(method="POST" action="" id="form")
                    .col-xs-12.col-md-6
                      .guest-personal-info
                        .title Guest Details
                        +select-control-horizontal-short("Title:")
                        +input-control-horizontal-short("First name:*:", "guest-first-name")
                        +input-control-horizontal-short("Last name:*:", "guest-last-name")
                        +input-control-horizontal-short("Street 1:", "guest-street-1")
                        +input-control-horizontal-short("Street 2:", "guest-street-2")
                        +input-control-horizontal-short("Zip code:*", "guest-zip-code")
                        +select-control-horizontal-short("Country:")
                        +input-control-horizontal-short("Telphone:*", "guesttelephone")
                        +input-control-horizontal-short("Email:*", "guest-email")
                    .col-xs-12.col-md-6
                      .guest-card-info
                        .title Card Details
                        +select-control-horizontal-short("Card type:")
                        +input-control-horizontal-short("Card Number:*:", "guest-card-number")
                        +input-control-horizontal-short("Ex Date:*:", "guest-card-ex-date")
                        +input-control-horizontal-short("Cardholder:", "guest-card-holder")
                    .col-xs-12
                      .agreement.text-center
                        .checkbox-group
                          label(for="agreement") 
                            input(type="checkbox" name="agreement", id="agreement") 
                            span.checkbox-face.fa.fa-check
                            |  I have understood and agree to the 
                            a(href="#") Booking Conditions
                            |  and agree to 
                            a(href="#") Kempinski's Privacy Policy
                            | .
                      .submission.text-center
                        //- input(type="submit" name="submit" value="NEXT STEP").btn.btn-default.btn-lg
                        button(type="submit" form="form" value="NEXT STEP").btn.btn-default.btn-lg
                          | NEXT STEP
                          span.arrow-white
            
            .col-xs-12.col-sm-12.col-md-3
              .col-services-info
                .block-services-short
                  .row
                    .services-item
                      .col-xs-2.text-center.icon
                        span.fa.fa-wifi
                      .col-xs-10
                        span Free Wifi
                    .services-item
                      .col-xs-2.text-center.icon
                        span.fa.fa-check
                      .col-xs-10
                        span Best Rates Guaranteed
                    .services-item
                      .col-xs-2.text-center.icon
                        span.fa.fa-user
                      .col-xs-10
                        span Customised assistance
                .row
                  .col-xs-12.col-sm-6.col-md-12
                    .block-media.full
                      .media-wrap
                        +img('media' , 'booking-step/img-1.jpg')
                  .col-xs-12.col-sm-6.col-md-12
                    .block-description
                      .title GOING BEYOND
                      .editor-content
                        p  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad totam atque sint eius tempora, perferendis.
                      .information
                        .address
                          span.fa.fa-map-marker
                          span West Corniche Road, P.O.Box - 39999, Abu Dhabi
                        .phone
                          span.fa.fa-phone
                          a(href="tel:://971-2-690-9000" title="+971 2 690 9000") +971 2 690 9000
                      .cta-btns.wide
                        a(href="#", title="Book Now").btn.btn-default-outline FURTHER INFORMATION
                .block-policy
                  p 
                    a(href="#", title="Guarantee Policy") Guarantee Policy
                  p Guarantee is mandatory to reserve the room.
                  p &nbsp;
                  p 
                    a(href="#", title="Terms & Conditions") Terms & Conditions
                  p 
                    a(href="#", title="Privacy Policy") Privacy Policy
                  p 
                    a(href="#", title="Children Policy") Children Policy
