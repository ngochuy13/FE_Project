    script#load-script-async.
      var windowLoaded;
      function loadScript(scriptArr){
        if(scriptArr.length===0){
          return;
        }
        var scriptFile = document.createElement("script");
        scriptFile.type = 'text/javascript';
        scriptFile.src = scriptArr.shift();
        scriptFile.addEventListener('load', function(){
            loadScript(scriptArr);
        });
        document.getElementsByTagName('head')[0].appendChild(scriptFile);
      }
      window.addEventListener('load', function(){
        window.windowLoaded = true;
        var scriptArr = document.getElementById("script-arr").value.split(",");
        loadScript(scriptArr);
      })


