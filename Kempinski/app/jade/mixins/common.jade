mixin filter-select(tabs)
  .filter-select&attributes(attributes)
    span.bg-filter-select
    //-span.bg-filter-select_active
    .filter-wrap.container
      .owl-carousel.filter-slide(role='tablist')
        each val, index in tabs
          - if( index == 0 ) {
            div.item.selected(role='presentation')
              +link(val.text, val.link)(aria-controls='#{val.link}' role='tab' data-toggle='tab' data-index="#{index}")
              span.bullet.animating.bounce-in
          - } else {
            div.item(role='presentation')
              +link(val.text, val.link)(aria-controls='#{val.link}' role='tab' data-toggle='tab' data-index="#{index}")
              span.bullet.animating.bounce-in
          - }
      .cover-after
      .cover-before

