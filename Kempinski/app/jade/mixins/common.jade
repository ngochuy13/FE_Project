mixin section-title(title, subtitle, subChildTitle)
  .section-title.text-center&attributes(attributes)
    .container
      h2.block-title.wow.fadeInUp(data-wow-duration="1s")!=title
      .sub-title.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.05s")
        span.line
        span.text!=subtitle
      .sub-child-title.wow.fadeInUp(data-wow-duration="1s" data-wow-delay="0.1s")!=subChildTitle
