extends layouts/default

block content
	.login-block
		.login-header
			.container
				.row
					.col-md-1.col-sm-2.hidden-xs
							img(src="images/signup-icon.png", alt="Log in")
					.col-sm-6
						h3.bold Log in
		.login-content
			.container
				.login-content-header
					p.p.bold Minions ipsum irure elit pepete potatoooo
				.login-content-sub-header.sub-title
					.p.dotdotdot
						p.full-text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus accumsan et viverra justo commodo. Proin sodales pulvinar tempor. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Nam fermentum, nulla luctus pharetra vulputate, felis tellus mollis orci, sed rhoncus sapien nunc eget odio.
					.expand-subtitle
						a.readmore.bold.visible-xs(href="#") Read more
					.p.original
				form.login-content-form
					.form-horizontal
						.form-group.email-input
							.col-md-4.col-sm-6
								input.gl-input(type="email" class="form-control" id="login-email" name="email" placeholder="Email Address")
						.form-group.pass-input
							.col-md-4.col-sm-6
								input.gl-input(type="password" class="form-control" id="login-password" name="pass" placeholder="Password")
						.form-group.submit-form
							.col-sm-12
								//- button.bold(type="submit" class="btn btn-default login-submit") Submit
								button(type="submit").button.rainbow.ft-signup-submit.button-login.button-having-loading
									.overlay
										.relative-container
											img(src="images/loading.png" alt="Loading")
									div.bgw Submit
						.form-group.form-link
							.col-sm-12
								a.p.xsmall(href="#" title='Sign up') Not a member? Sign up
								a.p.xsmall.i-forgot(href="#" title='Forgot Password') I forgot my Password
						.form-group.form-link
							.col-md-4.col-sm-6
								.error-mess.tac
									span.small You've entered wrong password !
		.forgot-content
			.container
				//- h3 Forget your password?
				.p
					p Enter your email below and we'll send you a new password:
				.row
					.col-sm-6
						form(action="")#forgotForm
							input(type="email" placeholder="Your email" name="email" required).gl-input
							button(type="submit").button.rainbow.pull-right
								.bgw Send


